
<div class="d-flex pt-3 justify-content-md-center">
  <h1> <%= @list.name %></h1>
  <h4>(<%= link_to "add movie", new_list_bookmark_path(@list), class: "text-decoration-none" %>)</h4>
</div>

  <div class="row">
    <div class="col-5">
      <h1 class="mt-3">Your review</h1>
      <%= simple_form_for([@list, @review]) do |f| %>
      <%= f.input :content %>
      <%= f.submit %>
      <% end %>
    </div>
    <div class="col-2">
    </div>
    <div class="col-5 ">
    <h4 class="mt-3">comments</h4>
      <% @reviews.each do |r|  %>
      <p class="m-2 comment"><%= r.content %></p>
      <% end %>
    </div>
  </div>

<div class="cards">
  <% @list.bookmarks.each do |b| %>
  <div class="nbs-card">
    <h4 class="mt-3 ps-3 pe-3" id="title-center"><%= b.movie.title %></h4>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= b.movie.poster_url %>)">
      <%# <div class="card-details"> %>
          <h4><%= b.comment %></h4>
          <h4><%= link_to "Delete",
          bookmark_path(b),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, id: "no-decoration"
            %>
          </h4>
        <%# </div> %>
      </div>
    </div>
  <% end %>
</div>
